<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/pokemon_list_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        style="@android:style/TextAppearance.DeviceDefault.Widget.IconMenu.Item"
        android:contentDescription="@string/pokemon_icon" />

    <TextView
        android:id="@+id/pokemon_list_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/text_margin"
        style="@android:style/TextAppearance.DeviceDefault.Small" />

    <TextView
        android:id="@+id/pokemon_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:textAppearance="?attr/textAppearanceListItem" />

</LinearLayout>